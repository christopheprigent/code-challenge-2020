{% extends 'base.html.twig' %}

{% block content %}
    <div class="js-game"
         data-timeout="{{ 1000 * default_timeout }}"
         data-url="{{ url('game_refresh', { 'uuid': game.uuid, 'renderer': renderer }) }}">

        <div class="js-maze">
            {% include ':game:viewMaze.html.twig' with { 'game': game, 'maze': maze } %}
        </div>

        <hr>

        <div class="js-buttons">
            {% include ':game:viewButtons.html.twig' with { 'game': game } %}
        </div>

        <hr>

        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="js-panels">
                        {% include ':game:viewPanels.html.twig' with { 'game': game, 'maze': maze } %}
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block more_javascripts %}
    <script src="{{ asset('js/refresh.js') }}"></script>
{% endblock %}
