{% extends 'base.html.twig' %}

{% block bodyclass %}
    {{ renderer.backgroundCss }}
{% endblock %}

{% block content %}
    <div class="js-game"
         data-timeout="{{ 1000 * default_timeout }}"
         data-url="{{ url('game_refresh', { 'uuid': game.uuid, 'renderer': renderer.name }) }}">

        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-10">
                    <div class="js-maze">
                        {% include ':game:viewMaze.html.twig' with { 'game': game, 'maze': maze } %}
                    </div>

                    <div class="js-buttons">
                        {% include ':game:viewButtons.html.twig' with { 'game': game } %}
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="js-panels">
                        {% include ':game:viewPanels.html.twig' with { 'game': game, 'maze': maze, 'renderer': renderer } %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block more_javascripts %}
    <script src="{{ asset('js/refresh.js') }}"></script>
{% endblock %}
